<!DOCTYPE HTML>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8">

		<title>EstoqueCar</title>
		
		<!-- JQuery -->
		<script src="js/jquery-2.2.1.js"></script>

		<!-- bootstrap - link cdn -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
	
		<!-- incluindo css -->
		<link href="css/style.css" rel="stylesheet">

		<!-- favicon -->
		<link rel="shortcut icon" href="images/favicon.ico" />
	</head>

	<body>

		<nav class="navbar navbar-default navbar-static-top">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					
					<img src="images/logo.png" />
				</div>

				<div id="navbar" class="navbar-collapse collapse">
					<ul class="nav navbar-nav navbar-right">
						<li><a href="/">HOME</a></li>
					</ul>
				</div>
			</div>
		</nav>


	    <div class="container">
	    	<div class="row">
	    		<div class="col-md-8">
	    			<div class="noticia_wrapper">
							<span class="noticia_autor"><%= equipamentos[0].tipo %></span>
		    			<a href="equipamento?id_equip=<%= equipamentos[0].id_equip %>" class="noticia_titulo"><%= equipamentos[0].tombo %></a>
		    		</div>
		    	</div>

	    		<div class="col-md-4">
	    			<div class="noticia_wrapper">
		    			<span class="noticia_autor"><%= equipamentos[1].tipo %></span>
		    			<a href="equipamento?id_equip=<%= equipamentos[1].id_equip %>" class="noticia_titulo"><%= equipamentos[1].tombo %></a>
		    		</div>
		    	</div>
	    	</div>

	    	<div class="row">
				<% for(var i = 2; i < equipamentos.length; i++){ %>
					<div class="col-md-4">
						<div class="noticia_wrapper">
							<span class="noticia_autor"><%= equipamentos[i].tipo %></span>
		    			<a href="equipamento?id_equip=<%= equipamentos[i].id_equip %>" class="noticia_titulo"><%= equipamentos[i].tombo %></a>
						</div>
					</div>
				<% } %>
	    	</div>

	    	<div class="row ver_mais">
	    		<button type="button" class="btn btn-default"><a href="equipamentos">Ver todas os equipamentos</a></button>
	    	</div>

	    </div>
	
		<!--   Core JS Files   -->
		<script src="js/jquery.3.2.1.min.js" type="text/javascript"></script>
		<script src="js/bootstrap.min.js" type="text/javascript"></script>
		
	</body>

	 


</html>